<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
<!-- Footer aligned to bottom -->
    <include
        layout="@layout/footer" />
    <RelativeLayout
        android:id="@+id/forms"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        >
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:id="@+id/UpdateImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:src="@drawable/icon"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />
                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:stretchColumns="1"
                    android:paddingTop="30dp"
                    android:layout_marginBottom="0.0dp">
                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />
                    <TableRow
                        android:id="@+id/tableRow1">
                        <TextView
                            android:text="ISBN Code"
                            android:id="@+id/textView12"
                            android:paddingRight="10dip"
                            android:paddingLeft="10dip" 
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textIsbn" 
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Author"
                            android:paddingRight="10dip"
                            android:paddingLeft="10dip" 
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textAuthor" 
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Title"
                            android:paddingRight="10dip"
                            android:paddingLeft="10dip" 
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textTitle" 
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Page Number"
                            android:paddingRight="10dip"
                            android:paddingLeft="10dip" 
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textPageNumber"
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Published Date"
                            android:paddingRight="10dip"
                            android:paddingLeft="10dip"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textPublishedDate"
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Price"
                            android:paddingRight="10dip"
                            android:paddingLeft="10dip"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textPrice" 
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Description"
                            android:paddingRight="10dip"
                            android:paddingLeft="10dip"
                            android:textColor="@color/black"/>
                        <TextView
                            android:text="Ctrl-Shift-S"
                            android:id="@+id/textDescription"
                            android:textColor="@color/black"/>
                    </TableRow>
                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />
                </TableLayout>
                <TableLayout
                    android:layout_width="fill_parent"
                    android:paddingTop="20dp"
                    android:layout_height="150dp">
                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />
                    <TableRow>
                        <TextView
                            android:text="Status"
                            android:paddingRight="10dip"
                            android:paddingLeft="10dip" 
                            android:textColor="@color/black"/>
                        <RadioGroup
                            android:orientation="horizontal"
                            android:id="@+id/updateRadioGroup">
                            <RadioButton
                                android:id="@+id/update_radio_read"
                                android:text="Read" 
                                android:textColor="@color/black"
                                android:buttonTint="@color/black"/>
                            <RadioButton
                                android:id="@+id/update_radio_ToRead"
                                android:text="To Read"
                                android:textColor="@color/black"
                                android:buttonTint="@color/black"/>
                            <RadioButton
                                android:id="@+id/update_radio_Reading"
                                android:text="Reading" 
                                android:textColor="@color/black"
                                android:buttonTint="@color/black"/>
                        </RadioGroup>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Note"
                            android:paddingRight="10dip"
                            android:paddingLeft="10dip"
                            android:textColor="@color/black"/>
                        <EditText
                            android:id="@+id/textNote"
                            android:layout_width="fill_parent" 
                            android:textColor="@color/black"/>
                    </TableRow>
                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />
                </TableLayout>
                <Toolbar
                    android:id="@+id/toolbar_bottom"
                    android:minHeight="?android:attr/actionBarSize"
                    android:background="?android:attr/colorAccent"
                    android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
                    android:popupTheme="@android:style/ThemeOverlay.Material.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>